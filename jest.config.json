{
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
    "<rootDir>/src/**/*.{spec,test}.{ts,tsx}"
  ],
  "testEnvironment": "jsdom",

  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "\\.(css|sass|scss)$": "identity-obj-proxy",
    "\\.svg": "<rootDir>/config/__mocks__/svg.js"
  }
}
